doctype html
html(lang="ko")
  head
    title= Effect
    link(rel="favicon" type="image/png" href="../image/icon.ico")
    link(rel="stylesheet" href="../css/main.css")
    link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Quicksand:500")
  body
    mixin itemFile(name, tab)
      div(style='width: 100%; height: 24px; margin-left: ' + (tab * 14) + 'px')
        i.material-icons(style='vertical-align: middle; font-size: 24px; margin-left: 14px;')
          | insert_drive_file
        span(style='vertical-align: middle; font-size: 14px;')= name
    mixin itemFolder(name, tab)
      div(style='width: 100%; height: 24px; margin-left: ' + (tab * 14) + 'px')
        i.material-icons(style='vertical-align: middle; font-size: 14px;')
          | keyboard_arrow_down
        i.material-icons(style='vertical-align: middle; font-size: 24px;')
          | folder
        span(style='vertical-align: middle; font-size: 14px;')= name
    #sidebar
      | sidebar
      p
      +itemFolder('GUIs', 0)
      +itemFile('main.gui', 1)
      +itemFolder('menu', 1)
      +itemFile('menu1.gui', 2)
      +itemFile('menu2.gui', 2)
      +itemFolder('Functions', 0)
      +itemFile('explode.func', 1)
      +itemFile('teleport.func', 1)
      +itemFile('command.func', 1)
      +itemFolder('commands', 1)
      +itemFile('fire.func', 2)
      +itemFile('move.func', 2)
      +itemFolder('porting', 2)
      +itemFile('port.func', 3)
      +itemFile('set.func', 3)
    #main
      #header
        | header
      #section
        | section
      #footer
        | footer
